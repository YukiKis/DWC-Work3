<%= render "users/link", user: @user, book_new: @book_new %>

    <div class="col-xs-9">
      <section class="users-index">
        <h1>Users</h1>
          <table class="table">
            <thead>
              <tr><th>image</th><th>name</th><th></th></tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:"jpeg", fallback: "noimage.jpg", size: "40x40" %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </section>
    </div>
  </div>
</div>