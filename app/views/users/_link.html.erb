<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <% if notice %>
        <p class="text-success"><%= notice %></p>
      <% elsif alert %>
        <p class="text-danger"><%= alert %></p>
      <% elsif book_new.errors.any? %>
        <section class="error-explanation text-danger">
          <h2><%= pluralize(book_new.errors.count, "error") %> prohibited this obj from being saved</h2>
          <ul>
            <% book_new.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </section>
      <% end %>

    </div>

    <div class="col-xs-3">

      <section class="user-info">
        <h1>User info</h1>
        <table class="table">
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "noimage.jpg", size: "100x100" %>
          <tr><th>name</th><td><%= user.name %></td></tr>
          <tr><th>introduction</th><td><%= user.introduction %></td></tr>
        </table>

        <div class="row">
          <div class="col-xs-12">
              <%= link_to edit_user_path(user.id), class: "btn btn-default btn-block" do %>
                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <% end %>
          </div>
        </div>
      </section>

      <section class="book-create">
        <h1>New book</h1>
        <%= form_with model: book_new, url: books_path, method: :post, local: true do |f| %>
          <div class="control-group">
            <%= f.label :title, class: "control-label"%>
            <%= f.text_field :title, class: "form-control"%>
            <%= f.label :body, class: "control-label"%>
            <%= f.text_area :body, class: "form-control"%>
            <%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </section>
    </div>