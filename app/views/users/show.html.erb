<%= render "users/link", user: @user, book: @book %>

    <div class="col-xs-9">
      <section class="book-show">
         <h2>Books</h2>
        <table class="table table-hover">
          <thead><tr><th></th><th>Title</th><th>Opinion</th></tr></thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "noimage.jpg", size: "40x40" %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </section>
    </div>
  </div>
</div>