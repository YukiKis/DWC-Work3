<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <% if notice %>
        <p class="text-success"><%= notice %></p>
      <% elsif alert %>
        <p class="text-danger"><%= alert %></p>
      <% end %>

      <section class="users-edit">
        <h1>User info</h1>
        <%= form_with model: @user,  local: true, class: "form-group" do |f| %>

        <% if @user.errors.any? %>
        <section class="error-explanation">
          <h3><%= pluralize(@user.errors.count, "error") %> occured</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </section>
        <% end %>

          <%= f.label :name, class: "control-label" %>
          <%= f.text_field :name %><br>
          <%= f.label :profile_image, class: "control-label" %>
          <%= f.attachment_field :profile_image %><br>
          <%= f.label :introduction, class: "control-label" %>
          <%= f.text_area :introduction %><br>
          <%= f.submit "Update User" %>
        <% end %>
      </section>
    </div>
</div>
</div>
