<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <section class="users-edit">
        <h1>User info</h1>
        <%= form_with model: @user,  local: true, class: "form-group" do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>
          <%= f.label :profile_image %>
          <%= f.attachment_field :profile_image %>
          <%= f.label :introduction %>
          <%= f.text_area :introduction %>
          <%= f.submit "Update" %>
        <% end %>
      </section>
    </div>
</div>
</div>
