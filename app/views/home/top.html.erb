<div class="container">
  <section class="home-top">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <% if notice %>
          <p class="text-success"><%= notice %></p>
        <% elsif alert %>
          <p class="text-danger"><%= alert %></p>
        <% end %>
        
        <h1>welcome to <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Bookers  !!</h1>
        <p class="main-text">
          In <span class="glyphicon glyphicon-book" aria-hidden="true"></span><strong>Bookers</strong>,<br>
          you can share and exchange your opinions impressions, and emotions<br>
          about various books!!
        </p>
        <%= link_to "Log in", new_user_session_path, class: "btn btn-block btn-info" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-block btn-success" %>
      </div>
    </div>
  </section>
