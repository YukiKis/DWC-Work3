<section class="books-show">
   <section class="user-info">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format:"jpeg", rollback: "images/noimage.jpg" %>
    <table>
      <tr><th>name</th><td><%= @user.name %></td></tr>
      <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
    </table>
    <%= link_to "setting", edit_user_path(@user.id) %>
   </section>

   <section class="book-create">
    <%= form_with model: @book, url: books_path, method: :post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :body %>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
    <% end %>
  </section>

  <section class="book-detail">
    <h2>Book detail</h2>
    <table>
      <tr>
        <th><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format:"jpeg" %></th>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    </table>
  </section>

</section>