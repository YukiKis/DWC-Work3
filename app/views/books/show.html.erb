<%= render "users/link", user: @user, book_new: @book_new %>

    <div class="col-xs-9">
      <section class="books-show">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <th>
              <%= link_to user_path(@user), class: "text-muted" do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format:"jpeg", fallback: "noimage.jpg", size: "40x40" %><br><%= @book.user.name %>
              <% end %>
            </th>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if current_user.id == @book.user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </table>
      </section>
    </div>
    
  </dvi>
</div>
