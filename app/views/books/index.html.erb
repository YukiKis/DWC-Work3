<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <section class="user-info">
        <!--info of current-user-->
        <h2>User info</h2>

        <table class="table">
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "noimage.jpg", size: "100x100" %>
            <tr><th>name</th><td><%= @user.name %></td></tr>
            <tr><th>introduction</th><td><%= @user.introduction %></td></tr>
          </tbody>
        </table>
        <div class="row">
          <div class="col-sm-12">
            <%= link_to "setting", edit_user_path(@user.id), class: "btn btn-default btn-block" %>
          </div>
        </div>
      </section>

            <section class="book-create">
        <h2>New Book</h2>
        <%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
          <div class="congrol-group">
           <p style="margin-bottom: 0;"><%= f.label :title, class: "control-label"%></p>
            <p><%= f.text_field :title, class: "form-control"%></p>
          </div>
          <div>
            <p style="margin-bottom: 0;"><%= f.label :body, class: "control-label"%></p>
            <p><%= f.text_area :body, class: "form-control"%></p>
          </div>
          <%= f.submit "Create Book", class: "btn btn-primary btn-block" %>
        <% end %>
      </section>
    </div>

    <div class="col-sm-9">
      <section class="books">
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="15%"></th>
              <th width="25%">Title</th>
              <th width="60%">Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "noimage.jpg", size: "40x40" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>
  </div>
</div>

