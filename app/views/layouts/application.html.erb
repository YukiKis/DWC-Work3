<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <% if user_signed_in? %>
          <li>HOME</li>
          <%= link_to "Users", users_path %>
          <li>Books</li>
          <li>logout</li>
        <% else %>
          <li>Home</li
          <li>About</li>
          <li>sign up</li>
          <li>login</li>
        <% end %>
      </ul>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
